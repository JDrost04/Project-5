max_cap = 300
SOH = 85 #-95 #(even vragen)
oplaadtempo_90 = 450 
oplaadtempo_10 = 60

DCap_85 = max_cap * 0.85 #(255 kWh)(even vragen)
DCap_95 = max_cap * 0.95 #(285 kWh)(even vragen)

Overdag_90_85 = DCap_85*0.9
Overdag_90_95 = DCap_95*0.9
